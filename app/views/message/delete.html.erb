<%= link_to("<< Back to List", message_index_path, :class => 'back-link') %>

<div class="message delete">
  <h2>Delete message</h2>

  <%= form_for(@message, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this message?</p>

    <p class="reference-name"><%= f.object.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete message") %>
    </div>

  <% end %>
</div>