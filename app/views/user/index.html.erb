<%= link_to("<< Back to List", access_menu_path, :class => 'back-link') %>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="user index">
    <h2>user</h2>
  
    <%= link_to("Add New user", new_user_path, :class => 'action user') %>
  
    <table class="listing" summary="User list">
      <tr class="header">
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Jop</th>
        <th>Message</th>


        <th>Actions</th>
      </tr>
      <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
  
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.jop.name %></td>
        <td><%= user.messages.pluck(:title) %></td>
        <td><%= user.messages.first.try(:title) %></td>


        <td class="actions">
          <%= link_to("Show", user_path(user), :class => 'action show') %>
          <%= link_to("Edit", edit_user_path(user), :class => 'action edit') %>
          <%= link_to("Delete", delete_user_path(user), :class => 'action delete') %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>