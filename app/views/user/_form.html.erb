<table summary="User form fields">
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Email_confirmation</th>
      <td><%= f.text_field(:email_confirmation) %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= f.text_field(:phone) %></td>
    </tr>
    <tr>
      <th>Jop</th>
      <td><%= f.select(:jop_id, Jop.all.map{|s| [s.name, s.id]}) %></td>
      
    </tr>
  </table>