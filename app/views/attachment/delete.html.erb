<%= link_to("<< Back to List", attachment_index_path, :class => 'back-link') %>

<div class="attachment delete">
  <h2>Delete attachment</h2>

  <%= form_for(@attachment, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this attachment?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete attachment") %>
    </div>

  <% end %>
</div>